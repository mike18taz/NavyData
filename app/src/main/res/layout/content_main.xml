<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.downs.navydata.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Tool Box"
        android:id="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_awaf"
        android:text="@string/awaf"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:onClick="seeAwaf" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_links"
        android:text="@string/links"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/button_awaf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:onClick="seeLinks"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_mrrr"
        android:text="@string/mrrr"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/button_links"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:onClick="seeMrrr"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_data"
        android:text="@string/data"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/button_mrrr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="seeData"/>

    <TextView
        android:text="@string/awaf_description"
        android:textColor="@color/colorTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_links"
        android:layout_toRightOf="@+id/button_awaf"
        android:layout_toEndOf="@+id/button_awaf"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/textViewAwaf" />

    <TextView
        android:text="@string/links_description"
        android:textColor="@color/colorTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_mrrr"
        android:layout_alignLeft="@+id/textViewAwaf"
        android:layout_alignStart="@+id/textViewAwaf"
        android:layout_marginBottom="12dp"
        android:id="@+id/textViewLinks" />

    <TextView
        android:text="@string/mrrr_description"
        android:textColor="@color/colorTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_data"
        android:layout_alignLeft="@+id/textViewLinks"
        android:layout_alignStart="@+id/textViewLinks"
        android:layout_marginBottom="12dp"
        android:id="@+id/textViewMrrr" />

    <TextView
        android:text="@string/data_description"
        android:textColor="@color/colorTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_mrrr"
        android:layout_alignLeft="@+id/textViewMrrr"
        android:layout_alignStart="@+id/textViewMrrr"
        android:layout_marginTop="18dp"
        android:id="@+id/textViewData" />

    <CheckedTextView
        android:text="Select a tool to access:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkedTextView"
        android:visibility="visible"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textViewAwaf"
        android:layout_alignStart="@+id/textViewAwaf"
        android:layout_alignRight="@+id/textViewLinks"
        android:layout_alignEnd="@+id/textViewLinks" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/navybackground"
        android:layout_below="@+id/button_data"
        android:id="@+id/imageView2" />


</RelativeLayout>
